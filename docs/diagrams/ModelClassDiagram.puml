@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model <<Rectangle>>{
Interface ReadOnlyMemeBook <<Interface>>
Interface Model <<Interface>>
Interface ObservableList <<Interface>>
Interface Stats <<Interface>>
Class MemeBook
Class ReadOnlyMemeBook
Class Model
Class ModelManager
Class UserPrefs
Class ReadOnlyUserPrefs
Class FilteredList

Package Meme {
Class Meme
Class Description
Class UniqueMemeList
}

Package Template {
Class Template
Class Name
Class UniqueTemplateList
}

Package Statistics {
Class StatsManager
Class LikeData
Class LikeManager
}

Package Tag {
Class Tag
}

Package ImagePath {
Class ImagePath
}
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

MemeBook .up.|> ReadOnlyMemeBook

ModelManager .up.|> Model
Model .right.> ObservableList
ModelManager o--> "1" MemeBook
ModelManager o-left-> "1" UserPrefs
ModelManager o-right-> "1" Stats
UserPrefs .up.|> ReadOnlyUserPrefs

MemeBook *--> "1" UniqueMemeList
UniqueMemeList o--> "*" Meme
Meme *--> "1" ImagePath
Meme *--> Description
Meme *--> "*" Tag

MemeBook *--> "1" UniqueTemplateList
UniqueTemplateList o--> "*" Template
Template *--> "1" Name
Template *--> "1" ImagePath

StatsManager .up.|> Stats
StatsManager *--> "1" LikeManager
LikeManager *--> "1" LikeData

ModelManager -->"1" Meme : filtered list
ModelManager -->"1" Template : filtered list
@enduml
